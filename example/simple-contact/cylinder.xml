<!-- A sphere undergoing sustained contact with the ground.  -->

<XML>
  <DRIVER>
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <!-- Primitives -->
<!--    <Cylinder id="s1" height="1" radius=".5" density="1.0" rpy="0 0 0" />-->
<!--    <Cylinder id="s1" height="1" radius=".5" density="1.0" rpy="0 0 0" />-->
    <Cylinder id="s1" height="1" radius=".5" density="1.0" rpy="1.57079632679 0 0" />

    <Box id="b3" xlen="20" ylen="0.001" zlen="20" density="10.0" />
    <Plane id="p3" />

    <!-- Integrator -->
    <RungeKuttaIntegrator id="rk4" />
    <EulerIntegrator id="euler" />

    <!-- Gravity force -->
    <GravityForce id="gravity" accel="0 -9.81 0"  />

    <!-- Rigid bodies -->
      <!-- the cylinder -->
      <RigidBody id="cylinder" enabled="true" position="0 0.5 0" visualization-id="s1" linear-velocity="10 0 0" angular-velocity="10 0 0">
        <InertiaFromPrimitive primitive-id="s1" />
        <CollisionGeometry primitive-id="s1" />
      </RigidBody>

      <!-- the ground -->
      <RigidBody id="ground" enabled="false" visualization-id="b3" position="0 0 0" >
        <CollisionGeometry primitive-id="p3" />
      </RigidBody>

    <!-- Setup the simulator -->
    <TimeSteppingSimulator id="simulator" integrator-id="rk4" Euler-step="0">
      <DynamicBody dynamic-body-id="cylinder" />
      <DynamicBody dynamic-body-id="ground" />
      <RecurrentForce recurrent-force-id="gravity"  />
      <ContactParameters object1-id="ground" object2-id="cylinder" epsilon="0" mu-coulomb="0" mu-viscous="0" friction-cone-edges="4" />
    </TimeSteppingSimulator>
  </MOBY>
</XML>

