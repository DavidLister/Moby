<!-- A box sitting on the "ground" and spinning w/o friction: 
     a very simple test case.  -->

<XML>
  <DRIVER step-size="0.01">
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <!-- Primitives -->
    <Box id="b1" xlen="1" ylen="1" zlen="1" density="1.0" />
    <Box id="b2" xlen=".9" ylen=".9" zlen=".9" density="1.0" />
    <Plane id="plane" position="0 0 0" /> 
    <Box id="plane-viz" xlen="10" ylen="100" zlen="10"  />

    <!-- Gravity force -->
    <GravityForce id="gravity" accel="0 -9.81 0"  />

    <!-- Rigid bodies -->
      <!-- the box -->
      <RigidBody id="box" enabled="true" position="0 .500 0" color=".4 0 0 1">
        <InertiaFromPrimitive primitive-id="b1" />
        <CollisionGeometry primitive-id="b1" compliant-layer-depth="0" />
      </RigidBody>

      <PseudoRigidBody id="box-plus" enabled="true" rigid-core-id="box" />

      <!-- the ground -->
      <RigidBody id="ground" enabled="false" position="0 0.0 0" color="0 0 1 0">
        <CollisionGeometry primitive-id="plane" />
        <Visualization visualization-id="plane-viz" visualization-rel-origin="0 -50 0" /> 
      </RigidBody>

    <!-- Setup the simulator -->
    <TimeSteppingSimulator id="simulator" constraint-stabilization-max-iterations="0">
      <DynamicBody dynamic-body-id="box-plus" />
      <DynamicBody dynamic-body-id="ground" />
      <RecurrentForce recurrent-force-id="gravity"  />
      <ContactParameters object1-id="ground" object2-id="box" epsilon="0" mu-coulomb="0" mu-viscous="0" friction-cone-edges="4" />
    </TimeSteppingSimulator>
  </MOBY>
</XML>

