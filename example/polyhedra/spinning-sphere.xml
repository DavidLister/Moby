<!-- Two spheres rolling against each other, trapped within a duct. --> 

<XML>
  <DRIVER step-size="0.01">
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <!-- Primitives -->
    <Polyhedron id="sph" filename="tessellated-sphere-200.obj" />
    <Plane id="wallyneg" />
    <Box id="ground-primitive" xlen="100" ylen="100" zlen="100" />

    <!-- Gravity force -->
    <GravityForce id="gravity" accel="0 -9.81 0"  />

    <!-- Rigid bodies -->
      <!-- the bottom sphere-->
      <RigidBody id="sphere" enabled="true" position="0 1 0" color=".4 0 0 0" angular-velocity="0.000 1 0" visualization-id="sph" mass="1" inertia=".4 0 0; 0 .4 0; 0 0 .4">
        <CollisionGeometry primitive-id="sph" compliant-layer-depth="0" />
      </RigidBody>

      <!-- the ground -->
      <RigidBody id="ground" enabled="false" position="0 -50.0 0" color="0 0 1 0">
        <CollisionGeometry primitive-id="ground-primitive" />
        <Visualization visualization-id="ground-primitive" /> 
      </RigidBody>

    <!-- Setup the simulator -->
    <TimeSteppingSimulator id="simulator" min-step-size=".01" constraint-stabilization-max-iterations="0">
      <DynamicBody dynamic-body-id="sphere" />
      <DynamicBody dynamic-body-id="ground" />
      <RecurrentForce recurrent-force-id="gravity"  />
      <ContactParameters object1-id="ground" object2-id="sphere" epsilon="0" mu-coulomb="100" mu-viscous="0" friction-cone-edges="4" stiffness="0" />
    </TimeSteppingSimulator>
  </MOBY>
</XML>

