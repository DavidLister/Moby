<!-- Two spheres rolling against each other, trapped within a duct. --> 

<XML>
  <DRIVER step-size="0.01">
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <!-- Primitives -->
    <Polyhedron id="sph" filename="tessellated-sphere-200.obj" />
    <Plane id="wallyneg" />
    <Plane id="wallxpos" position="1 0 0" aangle="0 0 1 1.5707963267949" />
    <Plane id="wallxneg" position="-1 0 0" aangle="0 0 1 -1.5707963267949" />
    <Plane id="wallzpos" position="0 0 +1" aangle="1 0 0 -1.5707963267949" />
    <Plane id="wallzneg" position="0 0 -1" aangle="1 0 0 1.5707963267949" />

    <!-- Gravity force -->
    <GravityForce id="gravity" accel="0 -9.81 0"  />

    <!-- Rigid bodies -->
      <!-- the bottom sphere-->
      <RigidBody id="sphere1" enabled="false" position="0 1 0" color=".4 0 0 0" angular-velocity="1 0.000 0" visualization-id="sph" mass="1" inertia=".4 0 0; 0 .4 0; 0 0 .4">
        <CollisionGeometry primitive-id="sph" compliant-layer-depth="0" />
      </RigidBody>

      <!-- the top sphere-->
      <RigidBody id="sphere2" enabled="true" position="0 3 0" color="0 0 1 0" angular-velocity="0 0.000 1" visualization-id="sph" mass="1" inertia=".4 0 0; 0 .4 0; 0 0 .4">
        <CollisionGeometry primitive-id="sph" compliant-layer-depth="0" />
      </RigidBody>

      <!-- the ground -->
      <RigidBody id="ground" enabled="false" position="0 0.0 0" color="0 0 1 0">
        <CollisionGeometry primitive-id="wallyneg" />
        <CollisionGeometry primitive-id="wallxneg" />
        <CollisionGeometry primitive-id="wallzneg" />
        <CollisionGeometry primitive-id="wallxpos" />
        <CollisionGeometry primitive-id="wallzpos" />
        <VVisualization visualization-id="plane-viz" visualization-rel-origin="0 -50 0" /> 
      </RigidBody>

    <!-- Setup the simulator -->
    <TimeSteppingSimulator id="simulator" min-step-size=".01" constraint-stabilization-max-iterations="0">
      <DynamicBody dynamic-body-id="sphere1" />
      <DynamicBody dynamic-body-id="sphere2" />
      <DynamicBody dynamic-body-id="ground" />
      <RecurrentForce recurrent-force-id="gravity"  />
      <ContactParameters object1-id="ground" object2-id="sphere1" epsilon="0" mu-coulomb="0" mu-viscous="0" friction-cone-edges="4" stiffness=".5" />
      <ContactParameters object1-id="ground" object2-id="sphere2" epsilon="0" mu-coulomb="0" mu-viscous="0" friction-cone-edges="4" stiffness=".5" />
      <ContactParameters object1-id="sphere1" object2-id="sphere2" epsilon="0" mu-coulomb="100" mu-viscous="0" friction-cone-edges="4" stiffness=".5" />
    </TimeSteppingSimulator>
  </MOBY>
</XML>

