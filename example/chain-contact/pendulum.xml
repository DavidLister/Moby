<!-- A pendulum bob striking a wall, reduced coordinate version -->

<XML>
  <DRIVER>
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <Cylinder id="c" radius="1" height="5" global-axis="y" circle-points="100" density="1.0" />
    <Box id="b3" xlen="10" ylen="1" zlen="10" density="10.0" />
    <Sphere id="sphere" radius="1.5811" mass="1" />

    <EulerIntegrator id="euler" />

    <GravityForce id="gravity" accel="0 -9.81 0 " />

  <Simulator integrator-id="euler" collision-detector-id="ccd">
    <RecurrentForce recurrent-force-id="gravity" enabled="true" /> 
    <DynamicBody dynamic-body-id="chain" />
  </Simulator>

  <RCArticulatedBody id="chain" fdyn-algorithm="crb" fdyn-algorithm-frame="global" floating-base="false">

      <RigidBody id="base" position="0 0 0"/>

      <RigidBody id="l1" position="1 0 0" rpy="0 0 1.5708" xvisualization-id="cyl">
        <InertiaFromPrimitive primitive-id="sphere" />
        <CollisionGeometry primitive-id="sphere" />
        <Visualization visualization-id="sphere" />
      </RigidBody>

      <RevoluteJoint id="q" q="1.5708" q-tare="-1.5708" qd="0" location="0 0 0" inboard-link-id="base" outboard-link-id="l1" type="revolute" maxforce="10000" lower-limits="-3.14" upper-limits="3.14" coulomb-friction-coeff="0" viscous-friction-coeff="0" restitution-coeff="1" axis="0 0 1" />
    </RCArticulatedBody>

  </MOBY>
</XML>

