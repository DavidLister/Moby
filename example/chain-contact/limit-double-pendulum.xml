<!-- double pendulum with fixed 2nd joint, swings to contact ground-->

<XML>
  <DRIVER>
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <Sphere id="sphere" radius="0.1811" mass="1" />

    <EulerIntegrator id="euler" />
    <RungeKuttaIntegrator id="rk4" />

    <GravityForce id="gravity" accel="0 -9.81 0 " />

  <EventDrivenSimulator integrator-id="rk4">
    <RecurrentForce recurrent-force-id="gravity" /> 
    <DynamicBody dynamic-body-id="chain" />
    <DynamicBody dynamic-body-id="ground" />
    <ContactParameters object1-id="ground" object2-id="chain" mu-coulomb="0.5" mu-viscous="0" epsilon="0.0"/>
  </EventDrivenSimulator>

  <RCArticulatedBody id="chain" fdyn-algorithm="crb" fdyn-algorithm-frame="link" floating-base="false">

      <RigidBody id="base" position="0 0 0">
      </RigidBody>

      <RigidBody id="l1" position="1 0 0" rpy="0 0 1.5708">
        <InertiaFromPrimitive primitive-id="sphere" />
        <Visualization visualization-id="sphere" />
      </RigidBody>

      <RigidBody id="l2" position="0 -1 0" rpy="0 0 0">
        <InertiaFromPrimitive primitive-id="sphere" />
        <Visualization visualization-id="sphere" />
        <CollisionGeometry primitive-id="sphere" />
      </RigidBody>

      <RevoluteJoint id="q1" q="2.5" q-tare="-1.5708" qd="0" location="0 0 0" inboard-link-id="base" outboard-link-id="l1" max-forces="10000" viscous-friction-coeff="0" axis="0 0 1" />
      <RevoluteJoint id="q2" q="0" q-tare="0" qd="0" location="1 0 0" inboard-link-id="l1" outboard-link-id="l2" max-forces="10000" lower-limits="0" upper-limits="0" viscous-friction-coeff="0" axis="0 0 1" />
    </RCArticulatedBody>

  <!-- setup the platform rigid body; it is not active -->
     <Box id="ground-primitive-viz" rpy="0 0.0 0"  xlen="3" ylen="0.001" zlen="3" />
     <Plane id="ground-primitive" rpy="0 0 0" />
<RigidBody id="ground" color="0.6 0.6 0.6 0" enabled="false"
  position="0 -1 0"
  visualization-id="ground-primitive-viz"
  compliant="false">
        <Visualization visualization-id="ground-primitive-viz" />
    <CollisionGeometry primitive-id="ground-primitive" />
  </RigidBody>
  </MOBY>
</XML>

