<!-- A pendulum subject to gears, falling and hitting the platform -->

<XML>
  <DRIVER step-size="0.01">
    <camera position="0 0 10" target="0 0 0" up="0 1 0" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <Sphere id="sphere" radius="1.5811" mass="1" />
    <Sphere id="sph2" radius=".1" mass="1" />
    <Cylinder id="cyl" radius=".01" height="1" mass="1" rpy="0 1.5708 0" position="0 .5 0"/>
    <Plane id="ground-plane" position="0 0 0" />
    <Box id="plane-viz" xlen="10" ylen="100" zlen="10" />

    <GravityForce id="gravity" accel="0 -9.81 0 " />

  <TimeSteppingSimulator>
    <RecurrentForce recurrent-force-id="gravity" /> 
    <DynamicBody dynamic-body-id="chain" />
    <DynamicBody dynamic-body-id="platform" />
    <ContactParameters object1-id="l1" object2-id="platform" epsilon=".7" />
  </TimeSteppingSimulator>

  <RCArticulatedBody id="chain" fdyn-algorithm="crb" fdyn-algorithm-frame="link" floating-base="false" translate="0 .8 0">

      <RigidBody id="base" position="0 0 0">
        <InertiaFromPrimitive primitive-id="sphere" />
      </RigidBody>

      <RigidBody id="l1" position="1 0 0" rpy="0 0 1.57079632679490" color="1 0 0 0">
        <InertiaFromPrimitive primitive-id="sphere"  />
        <Visualization visualization-id="cyl" />
        <Visualization visualization-id="sph2" />
        <CollisionGeometry primitive-id="sph2"  />
      </RigidBody>

      <RigidBody id="l2" position="0 0 0" >
        <InertiaFromPrimitive primitive-id="sphere" />
      </RigidBody>

      <RevoluteJoint id="q" q="1.5708" q-tare="-1.57079632679490" qd="0" location="0 0 0" inboard-link-id="base" outboard-link-id="l1" lower-limits="-10" upper-limits="3.14" coulomb-friction-coeff="0" viscous-friction-coeff="0" restitution-coeff="1" axis="0 0 1" />
      <RevoluteJoint id="q2" q="0" qd="0" location="0 0 0" inboard-link-id="base" outboard-link-id="l2" axis="0 1 0" />
      <Gears id="gears" inboard-link-id="l2" outboard-link-id="l1" gear-ratio=".0" />
    </RCArticulatedBody>

    <RigidBody id="platform" enabled="false">
        <CollisionGeometry primitive-id="ground-plane" />
        <Visualization visualization-id="plane-viz" visualization-rel-origin="0 -50 0" />
    </RigidBody>

  </MOBY>
</XML>

